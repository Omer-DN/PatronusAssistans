{
  "manifest_version": 3,
  "name": "Patronus Assistant",
  "version": "2.1",
  "description": "עוזר חכם בצורת פטרונוס אישי",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Patronus"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["patronus-pic/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
